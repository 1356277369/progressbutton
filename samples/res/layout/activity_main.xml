<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <SeekBar android:id="@+id/progress_seek_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:progress="66"
             android:max="100"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="Via XML:"/>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:baselineAligned="false">
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_1"
                        style="@style/ProgressButton.1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_2"
                        style="@style/ProgressButton.2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_3"
                        style="@style/ProgressButton.Clickable.3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_4"
                        style="@style/ProgressButton.Clickable.4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:baselineAligned="false">
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_5"
                        style="@style/ProgressButton.5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_6"
                        style="@style/ProgressButton.6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_7"
                        style="@style/ProgressButton.Clickable.7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <com.f2prateek.progressbutton.ProgressButton
                        android:id="@+id/pin_progress_8"
                        style="@style/ProgressButton.Clickable.8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="Via Code :"/>

            <LinearLayout android:orientation="horizontal"
                          android:id="@+id/container_3"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:baselineAligned="false"/>

            <LinearLayout android:orientation="horizontal"
                          android:id="@+id/container_4"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:baselineAligned="false"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
